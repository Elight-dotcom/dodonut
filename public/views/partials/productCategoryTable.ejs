<% products.forEach(product => { %>
<tr>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= product.id_product %></td>
    <td class="px-6 py-4 whitespace-nowrap">
        <div class="flex items-center">
            <div class="w-10 h-10 bg-dull rounded-full flex items-center justify-center">
                <img src="<%= product.image %>" alt="">
            </div>
            <div class="text-sm font-medium text-gray-900 ml-4"><%= product.product_name %></div>
        </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
        <% product.categories.forEach(category => { %>
            <%- include('categories', { category: category }) %>
        <% }); %>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
        <div class="flex items-center gap-3">
            <button 
                data-id="<%= product.id_product %>"
                data-name="<%= product.product_name %>"
                data-image="<%= product.image %>"
                data-categories='<%= JSON.stringify(product.categories) %>'
                class="btnEditCtgPrd bg-primary text-white px-4 py-2 rounded-lg hover:bg-dark flex items-center">
                Tambah Kategori
            </button>
        </div>
    </td>
</tr>
<% }) %>